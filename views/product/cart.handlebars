<div style="padding-top: 30px; padding-bottom: 50px; background-color:#e7dfd5;">
    <div class="container" style="margin: 0 20% 0 20%; text-align:right">
        <h1>Your Order</h1>
        <div class="grid3" style="grid-template-columns: repeat(1, 1fr);">
            <figure>

                <form method="POST" action="/product/removeItem">
                    {{#each data}}
                    <input type="hidden" name="name" value="{{name}}">
                    <input type="hidden" name="price" value="{{price}}">
                    <input type="hidden" name="img" value="{{img}}">
                    <div class="row">
                        <div class="col-md-3">
                            <img class="img-fluid" src="/img/{{img}}" alt="{{name}}">
                        </div>
                        <div class="col-md-3">
                            <h3>{{name}}</h3>
                        </div>
                        <div class="col-md-3">
                            <h4>${{price}}</h4>
                        </div>
                        <div class="col-md-3">

                            <input type="submit" value="Remove from Cart" id="btn">
                        </div>

                        <hr>
                        {{else}}
                        <div class="col-md-3">
                            <div>
                                <h3>Cart is Empty</h3>
                            </div>
                        </div>
                        {{/each}}
                </form>
                <form method="POST" action="/product/place">
                    <div class="row" style="text-align: center;">
                        <style>
                            #btn {
                                font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS", sans-serif;
                                border: 2px solid #e8015a;
                                border-radius: 10px;
                                color: #e8015a;
                                padding: 10px 10px;
                                margin-top: 5px;
                                text-align: center;
                                font-size: 1.5vw;
                                font-weight: 500;
                                display: inline-block;
                                background-color: #e7dfd5;
                            }

                            #btn:hover[type="submit"] {
                                color: white;
                                background: #e8015a;

                            }
                        </style>
                        <input type="submit" value="Place your order" id="btn">
                    </div>
        </div>
        </form>
        </figure>
    </div>
</div>
</div>